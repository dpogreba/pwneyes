<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.PwnEyes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/amber_accent</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color - transparent for edge-to-edge -->
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
        <!-- Navigation bar color - transparent for edge-to-edge -->
        <item name="android:navigationBarColor" tools:targetApi="21">@android:color/transparent</item>
        <!-- Ensure status bar content is visible -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!-- Enable edge-to-edge -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.PwnEyes.NoActionBar" parent="Theme.PwnEyes">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App Bar Overlay -->
    <style name="Theme.PwnEyes.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Popup Overlay -->
    <style name="Theme.PwnEyes.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
